{
  "name": "Java Development Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack", // Java Language Support
        "redhat.java", // Red Hat Java Erweiterung
        "vscjava.vscode-maven", // Maven Integration
        "vscjava.vscode-gradle", // Gradle Unterstützung
        "esbenp.prettier-vscode", // Prettier für Code-Formatierung
        "streetsidesoftware.code-spell-checker", // Code Spell Checker
        "pkief.material-icon-theme", // Material Icon Theme
        "hediet.vscode-drawio", // Draw.io für Diagramme
        "jeanp413.polacode-2022", // Polacode für Code Screenshots
        "ms-vscode.codetour", // Code Tour für interaktive Dokus
        "ritwickdey.liveser", // Web development
        "vsls-contrib.codetour", // Process of Code to explain.
        "wayou.vscode-todo-highlight",
        "jeff-hykin.polacode-2019",
        "illixion.vscode-vibrancy-continued"
      ],
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/opt/java/openjdk"
          }
        ],
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "postCreateCommand": "java -version"
}
